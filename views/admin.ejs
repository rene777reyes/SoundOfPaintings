<!DOCTYPE html>
<html>
<head>
    <%- include("partials/head.ejs") %>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

<nav class="navbar navbar-expand-lg bg-white border-bottom shadow-sm py-2">
  <div class="container-fluid">

    <div class="d-flex align-items-center">
      <div>
        <div style="font-weight:600; font-size:1.1rem;">
          Admin Dashboard
        </div>
        <div style="font-size:0.8rem; color:#888;">
          Welcome to Sound of Paintings
        </div>
      </div>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#adminNavbarNav" aria-controls="adminNavbarNav"
            aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="adminNavbarNav">
      <ul class="navbar-nav align-items-center">

        <li class="nav-item mx-1">
          <a class="nav-link" href="/artworks">Browse</a>
        </li>

        <li class="nav-item mx-1">
          <a class="nav-link" href="/">Search</a>
        </li>

        <li class="nav-item mx-1">
          <a class="nav-link" href="/favorites">Favorites</a>
        </li>

        <% if (session && session.role === 'admin') { %>
          <li class="nav-item mx-1">
            <a class="nav-link fw-bold" href="/admin">Admin</a>
          </li>
        <% } %>

        <% if (!session || !session.userId) { %>
          <li class="nav-item mx-1"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item mx-1"><a class="nav-link" href="/signup">Signup</a></li>
        <% } else { %>
          <li class="nav-item mx-1"><a class="nav-link" href="/logout">Logout</a></li>
        <% } %>

        <li class="nav-item mx-2">
          <span class="nav-link"></span>
        </li>
        <li class="nav-item mx-1">
          <span style="font-size:0.9rem;">
            Hello <%= username || (session && session.username) || 'Admin' %>
          </span>
        </li>

      </ul>
    </div>

  </div>
</nav>

<h1>Admin Dashboard</h1>

<p>Welcome, <%= username %>!</p>

<h2>Current Users</h2>

<% users.forEach(user => { %>
    <div class="user-card">

        <div class="user-info">
            <p>ID: <%= user.userId %></p>
            <p>Email: <%= user.email %></p>
            <p>Username: <%= user.username %></p>
            <p>
                Role: <%= user.role %> 
                <span class="role-badge"><%= user.role.toUpperCase() %></span>
            </p>

            <% if (session && user.userId !== session.userId) { %>
                <form action="/admin/users/<%= user.userId %>/delete" method="POST"
                      onsubmit="return confirm('Delete this user?');">
                    <button type="submit" class="delete-btn">Delete User</button>
                </form>
            <% } else { %>
                <p class="you-indicator">(You)</p>
            <% } %>
        </div>

        <div class="edit-user-box">
            <h3>Edit User</h3>

            <form action="/admin/users/<%= user.userId %>/update" method="POST">
                <label>Email:</label>
                <input type="email" name="email" value="<%= user.email %>" required>

                <label>Username:</label>
                <input type="text" name="username" value="<%= user.username %>" required>

                <label>Role:</label>
                <select name="role">
                    <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
                    <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>

                <button type="submit">Save Changes</button>
            </form>
        </div>

    </div>
    <hr>
<% }) %>

</body>
</html>

